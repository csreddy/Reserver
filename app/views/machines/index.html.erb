<h1>Machines</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Platform</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @machines.each do |machine| %>
      <tr>
        <td><%= machine.id %></td>
        <td><%= link_to machine.name, machine_path(machine) %></td>
        <td><%= machine.platform %></td>
        <td>
          <%= link_to 'Edit', edit_machine_path(machine), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', machine_path(machine), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_machine_path, :class => 'btn btn-primary' %>
